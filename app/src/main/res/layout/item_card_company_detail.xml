<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_clickable_company"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp"
    cardview:cardMaxElevation="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="14dp"
    cardview:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/item_img_company"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:contentDescription="@string/item_image_1" />

        <TextView
            android:id="@+id/item_name_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/item_name_ex"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/companyName_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:text="A certain company"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>